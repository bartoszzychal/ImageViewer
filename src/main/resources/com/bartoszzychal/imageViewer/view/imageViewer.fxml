<AnchorPane fx:id="anchorPane" prefHeight="800.0" prefWidth="800" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bartoszzychal.imageViewer.controller.ImageViewerController">
   <children>
      <ScrollPane hbarPolicy="AS_NEEDED" layoutY="50.0" vbarPolicy="ALWAYS">
         <content>
            <TilePane fx:id="tile" alignment="CENTER_LEFT" nodeOrientation="LEFT_TO_RIGHT" prefHeight="160.0" prefWidth="800.0" tileAlignment="TOP_LEFT" />
         </content>
      </ScrollPane>
      <ScrollPane  fx:id="scrollPane" hbarPolicy="AS_NEEDED" layoutY="215.0" prefHeight="587.0" prefWidth="819.0" vbarPolicy="AS_NEEDED">
      	<ImageView fx:id="imageViewViewer" disable="true" fitHeight="585.0" fitWidth="818.0"  pickOnBounds="true"  preserveRatio="true" cache="true" smooth="true"/>
      </ScrollPane>
      <Button fx:id="directoryButton" layoutX="8.0" layoutY="8.0" mnemonicParsing="false" onAction="#setDirectory" text="Select directory" />
      <Label fx:id="directoryLabel" layoutX="140.0" layoutY="13.0" prefHeight="21.0" prefWidth="651.0" text="path/to/directory" />
   </children>
</AnchorPane>
